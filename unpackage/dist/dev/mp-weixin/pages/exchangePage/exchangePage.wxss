.exchange-page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100vh;
  padding: 15rpx 15rpx 0;
  background: #F3F3F3;
}
.exchange-page .exchange-cover {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 1075rpx;
  padding-top: 105rpx;
  background: #fff;
}
.exchange-page .exchange-cover .exchange-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 544rpx;
  height: 516rpx;
  border-radius: 10rpx;
  background: #F1F1F1;
}
.exchange-page .exchange-cover .exchange-box .exchange-title {
  color: #000000;
  font-weight: 700;
  font-size: 32rpx;
  margin-top: 43rpx;
  margin-bottom: 23rpx;
}
.exchange-page .exchange-cover .exchange-box .exchange-frame {
  width: 491rpx;
  height: 194rpx;
  border: 2rpx solid #b0b0b0;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.exchange-page .exchange-cover .exchange-box .exchange-frame input {
  font-size: #9B9B9B;
  font-weight: 700;
  margin-top: 50rpx;
  text-align: center;
}
.exchange-page .exchange-cover .exchange-box .exchange-btn {
  width: 407rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 33rpx;
  background: #ff3276;
  border-radius: 20rpx;
}
.exchange-page .exchange-cover .exchange-box .exchange-tip {
  width: 516rpx;
  font-size: 22rpx;
  color: #999999;
  margin-left: 28rpx;
}

