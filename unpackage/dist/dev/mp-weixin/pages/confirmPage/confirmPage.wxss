.buy-page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100vh;
  padding: 15rpx 15rpx 0;
  background: #F3F3F3;
}
.buy-page .container-cover {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 1075rpx;
  padding-top: 25rpx;
  background: #fff;
}
.buy-page .container-cover .vcard-name {
  width: 100%;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.buy-page .container-cover .specs {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 696rpx;
  height: 105rpx;
  color: #727272;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  border: 1px solid #c1c1c1;
}
.buy-page .container-cover .specs .specs-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-weight: 700;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 32rpx;
  margin-left: 30rpx;
}
.buy-page .container-cover .specs .specs-title .specs-tip {
  width: 80rpx;
  height: 24rpx;
  color: #666;
  font-size: 18rpx;
  font-weight: 400;
  line-height: 24rpx;
  text-align: center;
  border-radius: 12rpx;
  margin-left: 16rpx;
  border: 1px solid #D4D4D4;
}
.buy-page .container-cover .specs .price {
  font-size: 30rpx;
  margin-right: 18rpx;
}
.buy-page .container-cover .active-item {
  border: 2px solid #FF3276;
}
.buy-page .container-cover .active-item .specs-title {
  color: #FF3276;
}
.buy-page .container-cover .active-item .price {
  color: #FF3276;
}
.buy-page .container-cover .exchange-btn {
  width: 696rpx;
  height: 105rpx;
  position: relative;
  font-weight: 700;
  color: #727272;
  line-height: 105rpx;
  background: #F1F1F1;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding-left: 30rpx;
  margin-bottom: 160rpx;
}
.buy-page .container-cover .exchange-btn::after {
  content: '';
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  width: 20rpx;
  height: 20rpx;
  border: 1px solid;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-color: #727272 #727272 transparent transparent;
}
.buy-page .container-cover .open-btn {
  width: 563rpx;
  height: 80rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20px;
  background: #FF3276;
}
.buy-page .confirm-img {
  width: 45rpx;
  height: 37rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

