.search-page {
  width: 100%;
  height: 100vh;
  background: #F5F2F5;
}
.search-page .search-cover {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 100%;
  height: 100rpx;
  font-size: 0;
  background: #fff;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.search-page .search-cover .search-input {
  padding-left: 20rpx;
  width: 550rpx;
  height: 40rpx;
  background: #F1F1F1;
  font-size: 22rpx;
  margin-right: 26rpx;
}
.search-page .search-cover .search-btn {
  width: 72rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: #ff324a;
  border-radius: 7rpx;
}
.search-page .clear-row {
  font-size: 0;
  height: 55rpx;
  line-height: 55rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.search-page .clear-row image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.search-page .clear-row text {
  color: #6F6F6F;
  font-size: 22rpx;
  margin-right: 15rpx;
}
.search-page .recode-items-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding-left: 30rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.search-page .recode-items-group .recode-item {
  padding: 10rpx 16rpx;
  background: #fff;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.search-page .no-data {
  width: 100%;
  display: inline-block;
  text-align: center;
  color: #353535;
  font-size: 32rpx;
}
.search-page .venue-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.search-page .venue-list .venue-item {
  margin-bottom: 20rpx;
}

